{
  "name": "Chromebooks.Today Chrome App",
  "version": "0.0.1",
  "manifest_version": 2,
  "minimum_chrome_version": "38",
  "short_name": "Chromebooks.Today",
  "description": "A Podcast listening app for the Chromebooks.Today podcast",

  "icons": {
    "16": "assets/icon_16.png",
    "128": "assets/icon_128.png"
  },

  "app": {
    "background": {
      "scripts": ["js/background.js"]
    }
  },
  
  "permissions": [
    "https://ajax.googleapis.com/",
    "http://www.chromebooks.today/",
    "http://cdn.chromebooks.today/",
    "https://archive.org/download/"
  ],
  "content_security_policy": "img-src 'self' data: chrome-extension-resource:"
}
